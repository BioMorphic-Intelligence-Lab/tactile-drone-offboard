<?xml version="1.0" ?>
<robot name="am" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ****************** MATHS CONSTANTS *******************************  -->
  <!-- Define generic, usefule maths constants -->
  <xacro:property name="pi2" value="1.57079632679"/>

  <!-- ****************** ROBOT CONSTANTS *******************************  -->
  <!-- Define the size of the robot's main chassis in meters -->
  <xacro:property name="width" value="0.03"/>
  <xacro:property name="length" value="0.02"/>
  <xacro:property name="joint_offset" value="0.04"/>

  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="trans_grey">
    <color rgba="${100/255} ${100/255} ${100/255} 0.35"/>
  </material>

  
  <!-- ****************** World Coordinate System ************************************  -->
  <link name="world"/>
  
  <!-- ****************** ROBOT FLYING BASE ************************************  -->
  <link name="base">
    <visual>
      <!--<origin xyz="-0.18 -0.75 -0.41" rpy="${pi2} 0 ${0.75 * pi}"/>-->
      <origin xyz="0.75 -0.18 -0.41" rpy="${pi2} 0 ${0.75 * pi + pi2}"/>
      <geometry>
        <mesh filename="package://am_vis/meshes/HolybroX500V2-withOBC.STL"
              scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.5 0.25"/>
      </geometry>
      <material name="trans_grey"/>
    </collision>
  </link>
  <!-- ****************** ROBOT ARM BASE ************************************  -->
  <link name="arm_base">
    <visual>
      <origin xyz="0.03 -0.045 -0.03" rpy="${pi2} 0.0 ${pi}"/>
      <geometry>
        <mesh filename="package://am_vis/meshes/SensorizedBase.STL"
              scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 ${-0.04/2}"/>
      <geometry>
        <box size="0.08 0.05 0.05"/>
      </geometry>
      <material name="trans_grey"/>
    </collision>
  </link>
  <!-- ****************** ROBOT BOTTOM *********************************  -->
  <link name="bottom">
    <visual>
      <origin xyz="0.03 -0.0165 0.075" rpy="${pi2} ${pi} ${-pi2}"/>
      <geometry>
        <mesh filename="package://am_vis/meshes/SensorizedBottom.STL"
              scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 ${-(joint_offset)}"/>
      <geometry>
        <box size="${width} ${length} 0.07"/>
      </geometry>
      <material name="trans_grey"/>
    </collision>
  </link>

  <link name="bottom_intermediate">
  </link>

  <!-- **************** ROBOT MIDDLE *********************************** -->
  <link name="middle">
    <visual>
      <origin xyz="-0.03 -0.02 -0.005" rpy="${pi2} 0.0 ${pi2}"/>
      <geometry>
        <mesh filename="package://am_vis/meshes/SensorizedMiddle.STL"
              scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 -0.035"/>
      <geometry>
        <box size="${width} ${length} 0.07"/>
      </geometry>
    </collision>
  </link>

  <!-- **************** ROBOT TOP *********************************** -->
  <link name="top">
    <visual>
      <origin xyz="-0.011 0.015 -0.01" rpy="${pi2} 0.0 0.0"/>
      <geometry>
        <mesh filename="package://am_vis/meshes/round-top.STL"
              scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 -0.025"/>
      <geometry>
        <box size="${width} ${length} 0.057"/>
      </geometry>
    </collision>
  </link>

  <!-- **************** ROBOT EE *************************************** -->
  <link name="ee" type="fixed"/>

  <!-- ****************** ROBOT JOINTS ********************************* -->
  <joint name="world_joint" type="floating">
    <parent link="world"/>
    <child link="base"/>
  </joint>

  <joint name="arm_connector" type="fixed">
    <parent link="base"/>
    <child link="arm_base" />
    <origin xyz="0.0 0.27875 -0.018" rpy="0 ${pi} ${pi2}"/>
  </joint>

  <joint name="base_joint_pitch" type="revolute">
    <parent link="arm_base"/>
    <child link="bottom_intermediate"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="${-pi2}" upper="${pi2}" velocity="${pi2}"/>
    <origin xyz="0.0 0.0 0.0315" rpy="0 0 0"/>
  </joint>

  <joint name="base_joint_roll" type="revolute">
    <parent link="bottom_intermediate"/>
    <child link="bottom"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="${-pi2}" upper="${pi2}" velocity="${pi2}"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 ${pi2}"/>
  </joint>

  <joint name="middle_joint" type="revolute">
    <parent link="bottom"/>
    <child link="middle"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="${-pi2}" upper="${pi2}" velocity="${pi2}"/>
    <origin xyz="0.0 0.0 ${1.5*joint_offset}" rpy="0 0 ${pi}"/>
  </joint>

  <joint name="top_joint" type="revolute">
    <parent link="middle"/>
    <child link="top"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="${-pi2}" upper="${pi2}" velocity="${pi2}"/>
    <origin xyz="0.0 0.0 ${(1.3*joint_offset)}" rpy="0 0 ${-pi}"/>
  </joint>

  <joint name="ee_connector" type="fixed">
    <parent link="top"/>
    <child link="ee"/>
    <origin xyz="0.0 0.0 ${(1.05*joint_offset)}" rpy="0 0 ${-pi2}"/>
  </joint>
</robot>
